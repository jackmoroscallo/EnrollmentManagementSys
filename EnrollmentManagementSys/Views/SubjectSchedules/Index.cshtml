@model IEnumerable<EnrollmentManagementSys.Models.SubjectSchedule>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<h1>Subject Schedule List</h1>

<p>
    <a asp-action="Create" class="btn btn-success"><i class="bi bi-patch-plus"></i> &nbsp;Create New</a>
</p>
<table id="dataTable" class="table table-bordered table-striped " style="width:100%">
    <thead>
        <tr>
            <th>
                Subject
            </th>
            <th>
                Time Start
            </th>
            <th>
                Time End
            </th>
            <th>
                Subject Day
            </th>
            <th>
                Monday
            </th>
            <th>
                Tuesday
            </th>
            <th>
                Wednesday
            </th>
            <th>
                Thursday
            </th>
            <th>
                Friday
            </th>
            <th>
                Saturday
            </th>
            <th>
                Sunday
            </th>
            <th>
                Subject Level
            </th>
            <th>
                Date Added
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room)
            </th>
            <th>
                Course
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Section)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Semester)
            </th>
            <th>
                School Year
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Instructor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.StudentSubject.SubjectCode)
            </td>
            <td>
                @item.SubjectTimeStart.ToString("hh:mm tt")
            </td>
            <td>
                @item.SubjectTimeEnd.ToString("hh:mm tt")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubjectDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Wed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Thu)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fri)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sun)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubjectLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateAdded)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Room.RoomName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentCourse.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Section.SectionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Semester.SemesterName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SchoolYear.SchoolYearName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Instructor.InstructorName)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.SubjectScheduleID" class="btn btn-warning"><i class="bi bi-pencil-square"></i> Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.SubjectScheduleID" class="btn btn-info"><i class="bi bi-info-circle"></i> Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.SubjectScheduleID" class="btn btn-danger"><i class="bi bi-trash3"></i> Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
