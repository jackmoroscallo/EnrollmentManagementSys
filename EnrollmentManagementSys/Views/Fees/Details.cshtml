@model EnrollmentManagementSys.Models.Fee

@{
    ViewData["Title"] = "Details";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<h1>Details</h1>

<div>
    <h4>Fee</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class = "col-sm-10">
            ₱ @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class = "col-sm-2">
            School Year
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SchoolYear.SchoolYearName)
        </dd>
        <dt class = "col-sm-2">
            Fee Type
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FeeType.FeeTypeName)
        </dd>
        <dt class="col-sm-2">
            Course
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StudentCourse.CourseName)
        </dd>
        <dt class = "col-sm-2">
            Year Level
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.YearLevel.YearLevelNum)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Term)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Term.TermName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.FeeID" class="btn btn-warning"><i class="bi bi-pencil-square"></i> Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
