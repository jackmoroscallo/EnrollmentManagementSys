@model IEnumerable<EnrollmentManagementSys.Models.StudentPayment>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<h1>Student Payment List</h1>

<p>
    <a asp-action="Create" class="btn btn-success"><i class="bi bi-patch-plus"></i> &nbsp;Create New</a>
</p>
<table id="dataTable" class="table table-bordered table-striped " style="width:100%">
    <thead>
        <tr>
            <th>
                Student
            </th>
            <th>
                Description
            </th>
            <th>
                Amount
            </th>
            <th>
                School Year
            </th>
            <th>
                Payment Date
            </th>
            <th>
                Details
            </th>
            <th>
                Term
            </th>
            <th>
                Payment Type
            </th>
            <th>
                Mode of Payment
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Student.StudentID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                ₱ @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SchoolYear.SchoolYearName)
            </td>
            <td>
                @item.PaymentDate.ToString("MM-dd-yyyy")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Details)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Term.TermName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentType.PaymentTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModeOfPayment.ModeOfPaymentName)
            </td>
            <br />
            <td>
                    <a asp-action="Edit" asp-route-id="@item.PaymentID" class="btn btn-warning"><i class="bi bi-pencil-square"></i>Edit</a><br>
                    <a asp-action="Details" asp-route-id="@item.PaymentID" class="btn btn-info"><i class="bi bi-info-circle"></i>Details</a>
                    <a asp-action="Delete" asp-route-id="@item.PaymentID" class="btn btn-danger"><i class="bi bi-trash3"></i> Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
