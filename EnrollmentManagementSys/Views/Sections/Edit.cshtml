@model EnrollmentManagementSys.Models.Section

@{
    ViewData["Title"] = "Edit";
}


<h1>Edit Section Details</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SectionID" />
            <div class="form-group">
                <label asp-for="SectionName" class="control-label">Section Name</label>
                <input asp-for="SectionName" class="form-control" />
                <span asp-validation-for="SectionName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentCourseID" class="control-label">Course</label>
                <select asp-for="StudentCourseID" class="form-control select2" asp-items="ViewBag.StudentCourseID"></select>
                <span asp-validation-for="StudentCourseID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
