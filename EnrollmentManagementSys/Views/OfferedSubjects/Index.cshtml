@model IEnumerable<EnrollmentManagementSys.Models.OfferedSubject>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<h1>Offered Subject List</h1>

<p>
    <a asp-action="Create" class="btn btn-success"><i class="bi bi-patch-plus"></i> &nbsp;Create New</a>
</p>
<table id="dataTable" class="table table-bordered table-striped " style="width:100%">
    <thead>
        <tr>
            <th>
                Subject
            </th>
            <th>
                Class Type
            </th>
            <th>
                Capacity
            </th>
            <th>
                Date Offered
            </th>
            <th>
                Subject Rate
            </th>
            <th>
                School Year
            </th>
            <th>
                Semester
            </th>
            <th>
                Course
            </th>
            <th>
                Subject Level
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.StudentSubject.SubjectInfo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClassType.ClassTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                    @item.DateOffered.ToString("MM-dd-yyyy")
            </td>
            <td>
                ₱ @Html.DisplayFor(modelItem => item.SubjectRate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SchoolYear.SchoolYearName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Semester.SemesterName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentCourse.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubjectLevel)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.OfferedSubjectID" class="btn btn-warning"><i class="bi bi-pencil-square"></i> Edit</a><br>

                    <a asp-action="Details" asp-route-id="@item.OfferedSubjectID" class="btn btn-info"><i class="bi bi-info-circle"></i> Details</a><br/>
                    <a asp-action="Delete" asp-route-id="@item.OfferedSubjectID" class="btn btn-danger"><i class="bi bi-trash3"></i> Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
