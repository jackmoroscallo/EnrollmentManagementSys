@model EnrollmentManagementSys.Models.OfferedSubject

@{
    ViewData["Title"] = "Details";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">


<div>
    <h4>Offered Subject Details</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Subject
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StudentSubject.SubjectInfo)
        </dd>
        <dt class = "col-sm-2">
            Course
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StudentCourse.CourseName)
        </dd>
        <dt class = "col-sm-2">
            Subject Level
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SubjectLevel)
        </dd>
        <dt class = "col-sm-2">
            Date Offered
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateOffered)
        </dd>
        <dt class = "col-sm-2">
            Subject Rate
        </dt>
        <dd class = "col-sm-10">
            ₱ @Html.DisplayFor(model => model.SubjectRate)
        </dd>
        <dt class = "col-sm-2">
            School Year
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SchoolYear.SchoolYearName)
        </dd>
        <dt class="col-sm-2">
            Capacity
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Capacity)
        </dd>
        <dt class = "col-sm-2">
            Semester
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Semester.SemesterName)
        </dd>
        <dt class = "col-sm-2">
            Class Type
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ClassType.ClassTypeName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.OfferedSubjectID" class="btn btn-warning"><i class="bi bi-pencil-square"></i> Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
