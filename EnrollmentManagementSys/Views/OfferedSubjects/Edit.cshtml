@model EnrollmentManagementSys.Models.OfferedSubject

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Offered Subject Details</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OfferedSubjectID" />
            <div class="form-group">
                <label asp-for="SubjectId" class="control-label">Subject</label>
                <select asp-for="SubjectId" class="form-control select2" asp-items="ViewBag.SubjectId"></select>
                <span asp-validation-for="SubjectId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassTypeID" class="control-label">Class Type</label>
                <select asp-for="ClassTypeID" class="form-control" asp-items="ViewBag.ClassTypeID"></select>
                <span asp-validation-for="ClassTypeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capacity" class="control-label"></label>
                <input asp-for="Capacity" class="form-control" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOffered" class="control-label">Date Offered</label>
                <input asp-for="DateOffered" type="date" class="form-control" />
                <span asp-validation-for="DateOffered" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubjectRate" class="control-label">Subject Rate</label>
                <input asp-for="SubjectRate" class="form-control" />
                <span asp-validation-for="SubjectRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SchoolYearID" class="control-label">School Year</label>
                <select asp-for="SchoolYearID" class="form-control select2" asp-items="ViewBag.SchoolYearID"></select>
                <span asp-validation-for="SchoolYearID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SemesterID" class="control-label">Semester</label>
                <select asp-for="SemesterID" class="form-control" asp-items="ViewBag.SemesterID"></select>
                <span asp-validation-for="SemesterID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentCourseID" class="control-label">Course</label>
                <select asp-for="StudentCourseID" class="form-control" asp-items="ViewBag.StudentCourseID"></select>
                <span asp-validation-for="StudentCourseID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubjectLevel" class="control-label">Subject Level</label>
                <input asp-for="SubjectLevel" class="form-control" />
                <span asp-validation-for="SubjectLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
