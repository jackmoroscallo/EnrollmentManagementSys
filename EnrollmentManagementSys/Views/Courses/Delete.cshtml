@model EnrollmentManagementSys.Models.Course

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Course Code
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StudentCourse.CourseName)
        </dd>
        <dt class = "col-sm-2">
            Course Description
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CourseDescription)
        </dd>
        <dt class = "col-sm-2">
            Course Status
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CourseStatus)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="RecordNumberId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
