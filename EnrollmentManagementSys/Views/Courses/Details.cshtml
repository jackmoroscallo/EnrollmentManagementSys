@model EnrollmentManagementSys.Models.Course

@{
    ViewData["Title"] = "Details";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<h1>Details</h1>

<div>
    <h4>Course</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Course Code
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StudentCourse.CourseName)
        </dd>
        <dt class = "col-sm-2">
            Course Description
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CourseDescription)
        </dd>
        <dt class = "col-sm-2">
            Course Status
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CourseStatus)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.RecordNumberId" class="btn btn-warning"><i class="bi bi-pencil-square"></i> Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
