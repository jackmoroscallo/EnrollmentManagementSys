@model IEnumerable<EnrollmentManagementSys.Models.Student>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<h1>Student List</h1>

<p>
    <a asp-action="Create" class="btn btn-success"><i class="bi bi-patch-plus"></i> &nbsp;Create New</a>
</p>
<table id="dataTable" class="table table-bordered table-striped " style="width:100%">
    <thead>
        <tr>
            <th>
               Student ID
            </th>
            <th>
                Last Name
            </th>
            <th>
                First Name
            </th>
            <th>
                Middle Name
            </th>
            <th>
                BirthDate
            </th>
            <th>
                Address
            </th>
            <th>
                Contact Number
            </th>
            <th>
                Email
            </th>
            <th>
                Course
            </th>
            <th>
                Year Level
            </th>
            <th>
                Gender
            </th>
            <th>
                Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StudentID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MiddleName)
            </td>
            <td>
                @item.Birthdate.ToString("MM-dd-yyyy")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentCourse.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearLevel.YearLevelNum)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender.Name)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentStatus.StatusName)
            </td>
            
            <td>
                    <a asp-action="Edit" asp-route-id="@item.RecordID" class="btn btn-warning"><i class="bi bi-pencil-square"></i> Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.RecordID" class="btn btn-info"><i class="bi bi-info-circle"></i> Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.RecordID" class="btn btn-danger"><i class="bi bi-trash3"></i> Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
