@model EnrollmentManagementSys.Models.ModelViews.EditRoleView

@{
    ViewData["Title"] = "Edit";
}

<form method="post">
    <div class="container">
        <div class="row">
            <h2 class="text-primary">Edit Role</h2>
            <hr />
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Id" class="control-label"></label>
            <input asp-for="Id" disabled class="form-control" />

        </div>
        <div class="mb-3">
            <label asp-for="RoleName" class="control-label"></label>
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-sm-10">

                <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
                <a asp-action="ListRoles" class="btn btn-error">Cancel</a>
            </div>
        </div>

        <div class="card card-primary">
            <div class="card-header">
                <h3>Users in this role </h3>
            </div>


            <div class="card-body">
                @if (Model.Users.Any())
                {
                    foreach (var user in Model.Users)
                    {
                        <h5>@user</h5>
                    }
                }
                else
                {
                    <h5>No users</h5>
                }
            </div>

            <div class="card-footer">
                <a asp-action="EditUsersInRole" asp-controller="Roles" asp-route-roleId="@Model.Id" class="btn btn-primary">Add or Remove Users</a>

            </div>

        </div>

    </div>
</form>



@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}