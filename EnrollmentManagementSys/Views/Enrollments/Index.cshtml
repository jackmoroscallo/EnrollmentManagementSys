@model IEnumerable<EnrollmentManagementSys.Models.Enrollment>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<h1>Enrolled Student List</h1>

<p>
    <a asp-action="Create" class="btn btn-success"><i class="bi bi-patch-plus"></i> &nbsp;Create New</a>
</p>
<table id="dataTable" class="table table-bordered table-striped " style="width:100%">
    <thead>
        <tr>
            <th>
                Student
            </th>
            <th>
                Course
            </th>
            <th>
                Year Level
            </th>
            <th>
                School Year
            </th>
            <th>
                Term
            </th>
            <th>
                Enrollment Date
            </th>
            <th>
                Enrollment Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Student.StudentInfo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentCourse.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearLevel.YearLevelNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SchoolYear.SchoolYearName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Term.TermName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnrollmentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnrollmentStatuses.EnrollmentStatusName)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.EnrollmentID" class="btn btn-warning"><i class="bi bi-pencil-square"></i> Edit</a><br>
                    <a asp-action="Details" asp-route-id="@item.EnrollmentID" class="btn btn-info"><i class="bi bi-info-circle"></i> Details</a>
                    <a asp-action="Delete" asp-route-id="@item.EnrollmentID" class="btn btn-danger"><i class="bi bi-trash3"></i> Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
