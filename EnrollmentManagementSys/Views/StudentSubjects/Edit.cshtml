@model EnrollmentManagementSys.Models.StudentSubject

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Student Subject</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SubjectId" />
            <div class="form-group">
                <label asp-for="StudentCourseID" class="control-label">Course</label>
                <select asp-for="StudentCourseID" class="form-control select2" asp-items="ViewBag.StudentCourseID"></select>
                <span asp-validation-for="StudentCourseID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubjectCode" class="control-label">Subject Code</label>
                <input asp-for="SubjectCode" class="form-control" />
                <span asp-validation-for="SubjectCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubjectDescription" class="control-label">Subject Description</label>
                <input asp-for="SubjectDescription" class="form-control" />
                <span asp-validation-for="SubjectDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Units" class="control-label"></label>
                <input asp-for="Units" class="form-control" />
                <span asp-validation-for="Units" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeID" class="control-label">Room Type</label>
                <select asp-for="TypeID" class="form-control" asp-items="ViewBag.TypeID"></select>
                <span asp-validation-for="TypeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubjectHours" class="control-label">Subject Hours</label>
                <input asp-for="SubjectHours" class="form-control" />
                <span asp-validation-for="SubjectHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
