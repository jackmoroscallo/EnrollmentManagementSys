@model EnrollmentManagementSys.Models.StudentSubject

@{
    ViewData["Title"] = "Details";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<h1>Subject Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Course
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StudentCourse.CourseName)
        </dd>
        <dt class = "col-sm-2">
            Subject Code
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SubjectCode)
        </dd>
        <dt class = "col-sm-2">
            Subject Description
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SubjectDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Units)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Units)
        </dd>
        <dt class = "col-sm-2">
            Subject Type
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StudentSubjectType.TypeName)
        </dd>
        <dt class = "col-sm-2">
            Subject Hours
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SubjectHours)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.SubjectId" class="btn btn-warning"><i class="bi bi-pencil-square"></i>Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
