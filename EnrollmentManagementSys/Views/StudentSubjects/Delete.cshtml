@model EnrollmentManagementSys.Models.StudentSubject

@{
    ViewData["Title"] = "Delete";
}



<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Subject Details</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Course
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StudentCourse.CourseName)
        </dd>
        <dt class = "col-sm-2">
            Subject Code
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SubjectCode)
        </dd>
        <dt class = "col-sm-2">
            Subject Description
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SubjectDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Units)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Units)
        </dd>
        <dt class = "col-sm-2">
            Subject Type
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StudentSubjectType.TypeName)
        </dd>
        <dt class = "col-sm-2">
            Subject Hours
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SubjectHours)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="SubjectId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
